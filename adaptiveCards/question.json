{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "TextBlock",
      "size": "Medium",
      "weight": "Bolder",
      "text": "What question do you have"
    },
    {
      "type": "TextBlock",
      "text": "I can answer any question that you have base on the context that we have in the brain",
      "wrap": true
    },
    {
      "type": "Input.Text",
      "id": "userInput",
      "placeholder": "Type your question here",
      "inlineAction": {
        "type": "Action.Execute",
        "verb": "submitQuestion",
        "iconUrl": "https://adaptivecards.io/content/send.png",
        "tooltip": "Send"
      }
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.4"
}
